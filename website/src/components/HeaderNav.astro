---
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 border-b border-border bg-surface/95 backdrop-blur supports-[backdrop-filter]:bg-surface/60">
  <div class="container">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center gap-3">
        <!-- Greatshield Logo -->
        <img 
          src="/greatshield_logo.png" 
          alt="Greatshield Logo" 
          class="w-10 h-10 object-contain"
        />
        <a href="/" class="text-xl font-serif font-bold text-text hover:text-accent transition-colors">
          Greatshield
        </a>
      </div>
      
      <nav class="hidden md:flex items-center space-x-6 text-sm font-medium">
        <a 
          href="#how-it-works" 
          class="nav-link"
          data-section="how-it-works"
        >
          How It Works
        </a>
        <a 
          href="#models" 
          class="nav-link"
          data-section="models"
        >
          Models
        </a>
        <a 
          href="#download" 
          class="nav-link"
          data-section="download"
        >
          Download
        </a>
      </nav>
      
      <a 
        href="https://github.com/greatshield/greatshield" 
        target="_blank" 
        rel="noopener noreferrer"
        class="btn-secondary text-sm"
        aria-label="View Greatshield on GitHub"
      >
        GitHub
      </a>
    </div>
  </div>
</header>