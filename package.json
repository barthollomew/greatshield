{
  "name": "greatshield",
  "version": "1.0.0",
  "description": "A local-first Discord moderation bot with AI-powered content analysis",
  "main": "dist/index.js",
  "bin": {
    "greatshield": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node bot/src/index.ts",
    "start": "node dist/src/index.js",
    "clean": "rimraf dist",
    "lint": "eslint bot/src --ext .ts",
    "lint:fix": "eslint bot/src --ext .ts --fix",
    "test": "jest",
    "package:win": "pkg . --targets node20-win-x64 --output dist/greatshield-win.exe",
    "package:mac": "pkg . --targets node20-macos-x64 --output dist/greatshield-mac",
    "package:linux": "pkg . --targets node20-linux-x64 --output dist/greatshield-linux",
    "package:all": "npm run package:win && npm run package:mac && npm run package:linux",
    "dev:landing": "cd website && npm run dev",
    "build:landing": "cd website && npm run build"
  },
  "keywords": [
    "discord",
    "moderation",
    "bot",
    "ai",
    "local-first",
    "ollama",
    "llm"
  ],
  "author": "Greatshield Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "better-sqlite3": "^11.8.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "inquirer": "^12.1.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "bot/schemas/**/*",
      "bot/templates/**/*"
    ]
  }
}
